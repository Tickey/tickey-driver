<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
	android:background="?android:attr/selectableItemBackground"	  
    tools:context="com.tickey.driver.screens.TicketsScreen" >

    
  <FrameLayout 
        android:layout_width="fill_parent"
        android:clickable="true"
       	android:background="?android:attr/selectableItemBackground"	 
        android:layout_height="0dp"
        android:layout_weight="0.8">
        <RelativeLayout 
            android:layout_gravity="center"    
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
    	<ImageView
    	    android:id="@+id/iv_buy_ticket" 
    	    android:layout_width="365dp"
    	    android:layout_height="300dp"   	    	 
    	    android:src="@drawable/sell_ticket_btn"/>
    	<TextView
    	    android:id="@+id/tv_buy_ticket"
    	    android:layout_alignBottom="@+id/iv_buy_ticket"
    	    android:gravity="center_horizontal"
    	    android:layout_marginBottom="30dp"
    	    android:layout_marginLeft="122dp"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@color/white"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:text="Price : 1 bgn"/>
    	</RelativeLayout>
   </FrameLayout>
   <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="0dp"
       android:layout_weight="0.2"
       android:orientation="vertical"
       android:gravity="center"
       android:background="@color/background_blue">
    	<TextView 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
			android:gravity="center"
			android:layout_gravity="center"
			android:text="National Palace of Culture"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@color/white"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:gravity="center"
			android:layout_gravity="center"
			android:text="Sofia,Bulgaria"
			android:drawablePadding="5dp"
			android:drawableLeft="@drawable/location_pin"		
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/text_color_green"/>
   </LinearLayout>


</LinearLayout>
